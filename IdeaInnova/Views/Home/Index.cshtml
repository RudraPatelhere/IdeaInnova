@{
    ViewData["Title"] = "Home";
    var allIdeas = ViewBag.AllIdeas as List<IdeaInnova.Models.Idea>;
    var trending = ViewBag.Trending as List<IdeaInnova.Models.Idea>;
}

<!-- Hero Section -->
<div class="bg-gradient-to-r from-purple-600 to-indigo-500 text-white rounded-lg shadow-lg p-10 flex justify-between items-center">
    <div>
        <h1 class="text-3xl font-bold mb-2">Share Your Brilliant Ideas</h1>
        <p class="text-sm opacity-90">Transform the workplace with your innovative thoughts and earn rewards!</p>
        <a href="/IdeasView/Submit" class="mt-5 inline-block bg-white text-purple-600 font-semibold px-5 py-2 rounded-lg shadow hover:bg-purple-100 transition">Submit Your Idea</a>
    </div>
    <img src="https://cdn-icons-png.flaticon.com/512/6619/6619700.png" alt="lightbulb" class="h-36 hidden md:block" />
</div>

<!-- Trending Ideas -->
<h2 class="text-2xl font-bold mt-10 mb-4 text-gray-800">Trending Ideas</h2>
<div class="grid md:grid-cols-3 gap-6">
    @foreach (var idea in trending)
    {
        <div class="bg-white p-5 rounded-lg shadow hover:shadow-xl transition">
            <h3 class="font-semibold text-md">@idea.Title</h3>
            <p class="text-sm text-gray-600">@idea.Description</p>
            <div class="flex justify-between items-center mt-3 text-xs text-gray-500">
                <span>👍 @idea.Votes votes</span>
                <span class="bg-green-100 text-green-600 px-2 py-0.5 rounded-full text-xs">Approved</span>
            </div>
        </div>
    }
</div>

<!-- Top Innovators + Achievements -->
<div class="grid md:grid-cols-2 gap-6 mt-10">
    <!-- Contributors -->
    <div class="bg-white rounded shadow p-4">
        <h3 class="text-xl font-bold mb-4">Top Contributors</h3>
        <div class="space-y-2 text-sm">
            <div class="flex justify-between">
                <span>🏅 Emily White</span>
                <span class="text-yellow-500 font-bold">2,450 pts</span>
            </div>
            <div class="flex justify-between">
                <span>👨‍💻 David Lee</span>
                <span class="text-yellow-500 font-bold">2,180 pts</span>
            </div>
        </div>
    </div>

    <!-- Achievements -->
    <div class="bg-white rounded shadow p-4">
        <h3 class="text-xl font-bold mb-4">Recent Achievements</h3>
        <ul class="text-sm space-y-2">
            <li>🥇 Innovation Champion - Top 3 idea contributors</li>
            <li>⭐ Engagement Star - Most active voter</li>
        </ul>
    </div>
</div>

<!-- Footer -->
<footer class="mt-16 bg-gray-900 text-gray-300 text-sm py-6 px-4 rounded-lg">
    <div class="grid md:grid-cols-4 gap-4">
        <div>
            <h4 class="font-bold text-white mb-2">IdeaInnova</h4>
            <p>Empowering innovation through collaboration.</p>
        </div>
        <div>
            <h4 class="font-bold text-white mb-2">Quick Links</h4>
            <ul>
                <li><a href="/IdeasView/Submit">Submit Idea</a></li>
                <li><a href="/IdeasView/Vote">Vote</a></li>
                <li><a href="/UsersView/Leaderboard">Leaderboard</a></li>
            </ul>
        </div>
        <div>
            <h4 class="font-bold text-white mb-2">Help & Support</h4>
            <ul>
                <li>FAQs</li>
                <li>Contact Us</li>
                <li>Terms of Service</li>
            </ul>
        </div>
        <div>
            <h4 class="font-bold text-white mb-2">Connect</h4>
            <div class="flex space-x-3">
                <a href="#"><img src="https://cdn-icons-png.flaticon.com/512/733/733547.png" class="h-5" /></a>
                <a href="#"><img src="https://cdn-icons-png.flaticon.com/512/733/733558.png" class="h-5" /></a>
                <a href="#"><img src="https://cdn-icons-png.flaticon.com/512/733/733579.png" class="h-5" /></a>
            </div>
        </div>
    </div>
    <p class="text-center mt-4 text-gray-400">© 2025 IdeaInnova. All rights reserved.</p>
</footer>
