@model IdeaInnova.Models.Idea
@{
    ViewData["Title"] = "Submit Idea";
}

<div class="max-w-xl mx-auto mt-10 bg-white p-6 rounded shadow-lg">
    <h2 class="text-2xl font-bold mb-4 text-purple-700">Submit Your Brilliant Idea ✨</h2>
    <form asp-action="Submit" method="post">
        <input asp-for="Title" class="w-full mb-3 p-2 border border-purple-300 rounded focus:outline-none focus:ring-2 focus:ring-purple-400" placeholder="Idea Title" required />
        <textarea asp-for="Description" class="w-full mb-3 p-2 border border-purple-300 rounded focus:outline-none focus:ring-2 focus:ring-purple-400" placeholder="Description" rows="4" required></textarea>
        <button type="submit" class="bg-gradient-to-r from-purple-500 to-pink-500 text-white py-2 px-4 rounded shadow hover:scale-105 transition">Submit</button>
    </form>
</div>
