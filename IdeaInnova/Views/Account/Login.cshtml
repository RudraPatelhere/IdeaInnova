@{
    ViewData["Title"] = "Login";
}

<div class="max-w-md mx-auto mt-10 p-6 bg-white shadow rounded">
    <h2 class="text-xl font-bold mb-4">Login</h2>
    <form asp-action="Login" method="post">
        <input type="text" name="username" placeholder="Username" class="form-control mb-2 w-full p-2 border rounded" required />
        <input type="password" name="password" placeholder="Password" class="form-control mb-2 w-full p-2 border rounded" required />
        <button type="submit" class="bg-purple-600 text-white py-2 px-4 rounded">Login</button>
    </form>
    @if (ViewBag.Error != null)
    {
        <p class="text-red-500 mt-3">@ViewBag.Error</p>
    }
    <p class="mt-3 text-sm">Don't have an account? <a href="/Account/Signup" class="text-purple-600">Sign up</a></p>
</div>
